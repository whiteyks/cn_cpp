{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build & debug file",
        "type": "shell",
        "command": "C:/bin/MinGW64/bin/g++.exe",
        "args": [
          "-Wall",
          "-g",
          "-o",
          "${fileBasenameNoExtension}",
          "main.cpp",
          "TerranUnit.cpp",
          "Marine.cpp"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ]
      },
      {
        "label": "build & run file",
        "type": "shell",
        "command": "C:/bin/MinGW64/bin/g++.exe",
        "args": [
          "-o",
          "${fileBasenameNoExtension}",
          "main.cpp",
          "TerranUnit.cpp",
          "Marine.cpp"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ]
      }
    ]
  }